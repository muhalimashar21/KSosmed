<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".logindanregister.RegisterActivity">

    <EditText android:layout_width="250dp"
              android:id="@+id/etEmailRegister"
              android:hint="email"
              android:inputType="textEmailAddress"
              android:layout_height="wrap_content"/>

    <EditText android:layout_width="250dp"
              android:id="@+id/etPasswordRegister"
              android:layout_marginTop="20dp"
              android:hint="password"
              android:inputType="textPassword"
              android:layout_height="wrap_content"/>
    <ImageView android:layout_width="60pt"
               android:id="@+id/ivImageAkun"
               android:layout_marginTop="36dp"
               android:src="@mipmap/ic_launcher"
               android:layout_height="50pt"/>
    <Button android:layout_width="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@color/colorHijau"
            android:onClick="BtnDaftar"
            android:text="Daftar dan Login"
            android:layout_height="wrap_content"/>

</LinearLayout>